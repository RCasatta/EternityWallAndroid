<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.eternitywall.eternitywall.fragments.CreateFragment"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPassword"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                android:lines="3"
                android:text="here will be the passphrase"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ivIdenticon"
                android:layout_below="@+id/etPassword"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/identicon_placeholder"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <TextView
                android:text="Use this PIN to view your passphrase from preference settings and confirm sending messages."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDisclaimer2"
                android:layout_below="@+id/txtDisclaimer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutPassword"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PIN"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:textSize="18sp"
                        style="@style/EditText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/confirmPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm PIN"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:textSize="18sp"
                        style="@style/EditText" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <Button
                    android:id="@+id/btnRefresh"
                    android:text="@string/btn_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:text="@string/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            </LinearLayout>

            <TextView
                android:text="Your account can only be restored using the above passphrase. Make sure you save it before proceeding. For safety reasons, the passphrase is stored only on your device and not on the servers. If you loose it without backup, is not recoverable."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDisclaimer"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/etPassword" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
