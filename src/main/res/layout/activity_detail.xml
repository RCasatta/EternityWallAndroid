<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_high"
    android:layout_height="match_parent" tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answersMessages"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/progress"
            android:layout_alignEnd="@+id/progress" />

        <LinearLayout
        style="@style/itemMessageStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout">

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:layout_marginTop="8dp">

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_share"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnProof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_link"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_ranking"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_translate"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_likes"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <Button
                style="@style/buttonStyle"
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/icon_commenting"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

    </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repliesMessages"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/progress"
            android:layout_alignEnd="@+id/progress" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:indeterminate="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"/>


